<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fitsSystemWindows="false"
    android:clipToPadding="false"
    android:orientation="vertical"

    >
    <include
        layout="@layout/toolbar"/>

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/mine_bg_login"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mine_image"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mine_login"
            />


    </LinearLayout>
    <com.example.wangchang.fulv.view.MySettingView
        android:layout_marginTop="10dp"
        android:id="@+id/cardMv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        style="@style/LineH"
        />
    <com.example.wangchang.fulv.view.MySettingView
        android:id="@+id/orderMv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        style="@style/LineH"
        />
    <com.example.wangchang.fulv.view.MySettingView
        android:id="@+id/etcMv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        style="@style/LineH"
        />
    <com.example.wangchang.fulv.view.MySettingView
        android:id="@+id/pointMv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        style="@style/LineH"
        />
    <com.example.wangchang.fulv.view.MySettingView
        android:id="@+id/messageMv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        style="@style/LineH"
        />
    <com.example.wangchang.fulv.view.MySettingView
        android:id="@+id/questionMv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        style="@style/LineH"
        />
    <com.example.wangchang.fulv.view.MySettingView
        android:id="@+id/aboutMv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        style="@style/LineH"
        />
</LinearLayout>
